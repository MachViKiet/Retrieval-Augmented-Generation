{
  "name": "nodejs-server",
  "private": true,
  "version": "1.0.0",
  "author": "Mạch Vĩ Kiệt",
  "description": "Luận văn 2024",
  "main": "server.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "node --env-file=.env ./build/src/server.js",
    "deploy": "nodemon --exec babel-node --env-file=.development.env ./build/src/server.js",
    "dev": "nodemon --exec babel-node --env-file=.development.env ./src/server.js",
    "test": "nodemon -r esm  ./src/server.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.10",
    "@jridgewell/gen-mapping": "^0.3.5",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "express-form-data": "^2.0.23",
    "express-validator": "^7.2.0",
    "fs": "^0.0.1-security",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.2",
    "mongoose-paginate-v2": "^1.8.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-utf8": "^1.4.7",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "path": "^0.12.7",
    "pdf-parse": "^1.1.1",
    "request-ip": "^3.3.0",
    "rm": "^0.1.8",
    "socket.io": "^4.8.1",
    "trim-request": "^1.0.6",
    "uuid": "^11.0.3",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.22.10",
    "@babel/node": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1"
  }
}
